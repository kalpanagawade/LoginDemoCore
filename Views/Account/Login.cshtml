@model LoginDemo.Models.UserModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoginDemo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoginDemo.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="form-box">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            <label>Username</label>
            <input asp-for="Username" type="text" />

            <label>Password</label>
            <input asp-for="Password" type="password" />

            <button type="submit">Login</button>
        </form>

        <div class="error">@ViewBag.Message</div>

        <a asp-action="Register">New User? Register</a>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>







