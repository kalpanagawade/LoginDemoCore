<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoginDemo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoginDemo.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <span class="navbar-brand">Learning Dashboard</span>

            <!-- LOGOUT BUTTON -->
            <a asp-controller="Account" asp-action="Login" class="btn btn-danger btn-sm">
                Logout
            </a>
        </div>
    </nav>

    <!-- MAIN LAYOUT -->
    <div class="container-fluid">
        <div class="row" style="margin-top:60px">

            <!-- LEFT SIDEBAR -->
            <div class="col-2 bg-light vh-100 border-end">
                <h6 class="mt-3">Modules</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Module" asp-action="Sql">
                            SQL Module
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            C# Module
                        </a>
                    </li>
                </ul>
            </div>

            <!-- PAGE CONTENT -->
            <div class="col-10 p-4">
                @RenderBody()
            </div>

        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
